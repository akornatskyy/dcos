{
  "requires": [
    "openssl",
    "libevent",
    "curl",
    "boost-libs",
    "libseccomp"
  ],
  "sources": {
    "mesos": {
      "kind": "git",
      "git": "https://github.com/apache/mesos",
      "ref": "e6b15b1e968649c794d67bb97961e8f0216e2ed8",
      "ref_origin": "master"
    },
    "mesos-modules": {
      "kind": "git",
      "git": "git@github.com:akornatskyy/dcos-mesos-modules.git",
      "ref": "ae6d2d36ce170a640976a3c8157bf8bbca34fcee",
      "ref_origin": "cmake"
    }
  },
  "environment": {
    "JAVA_LIBRARY_PATH": "/opt/mesosphere/lib",
    "MESOS_NATIVE_JAVA_LIBRARY": "/opt/mesosphere/lib/libmesos.so"
  },
  "state_directory": true,
  "sysctl": {
    "dcos-mesos-slave": {
      "vm.max_map_count": 262144,
      "vm.swappiness": 1
    },
    "dcos-mesos-slave-public": {
      "vm.max_map_count": 262144,
      "vm.swappiness": 1
    }
  }
}
